		case 28:
			answerLanguage = "";
			break;
		case 29:
			answerLanguage = "";
			break;
		case 30:
			answerLanguage = "";
			break;
		case 31:
			answerLanguage = "";
			break;
		case 32:
			answerLanguage = "";
			break;
		case 33:
			answerLanguage = "";
			break;
		case 34:
			answerLanguage = "";
			break;
		case 35:
			answerLanguage = "";
			break;
		case 36:
			answerLanguage = "";
			break;
		case 37:
			answerLanguage = "";
			break;
		case 38:
			answerLanguage = "";
			break;
		case 39:
			answerLanguage = "";
			break;
		case 40:
			answerLanguage = "";
			break;
		case 41:
			answerLanguage = "";
			break;
		case 42:
			answerLanguage = "";
			break;
		case 43:
			answerLanguage = "";
			break;
		}
		int studyNum = problem.getStudyNum();
		String output = problem.getProblemOutput();
		if(output.equals(ansOutput))
			problemCorrection = true;
		answer.setProblemNum1(problemNum);
		answer.setAnswerCode(answerCode);
		answer.setAnswerLanguage(answerLanguage);
		answer.setWriterName(writerName);
		answer.setProblemCorrection(problemCorrection);
		ansdao.insert(answer);
		request.setAttribute("problemNum", problemNum);
