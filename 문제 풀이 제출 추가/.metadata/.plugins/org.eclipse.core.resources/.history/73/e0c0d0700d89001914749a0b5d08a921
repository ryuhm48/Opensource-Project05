			answerLanguage = "C (gcc 5.4.0)";
			break;
		case 8:
			answerLanguage = "C (gcc 4.9.4)";
			break;
		case 9:
			answerLanguage = "C (gcc 4.8.5)";
			break;
		case 10:
			answerLanguage = "C++ (g++ 7.2.0)";
			break;
		case 11:
			answerLanguage = "";
			break;
		case 12:
			answerLanguage = "";
			break;
		case 13:
			answerLanguage = "";
			break;
		case 14:
			answerLanguage = "";
			break;
		case 15:
			answerLanguage = "";
			break;
		case 16:
			answerLanguage = "";
			break;
		case 17:
			answerLanguage = "";
			break;
		case 18:
			answerLanguage = "";
			break;
		case 19:
			answerLanguage = "";
			break;
		case 20:
			answerLanguage = "";
			break;
		case 21:
			answerLanguage = "";
			break;
		case 22:
			answerLanguage = "";
			break;
		case 23:
			answerLanguage = "";
			break;
		case 24:
			answerLanguage = "";
